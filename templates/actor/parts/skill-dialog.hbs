<form class="{{cssClass}}" autocomplete="off">
    <header class="item-header">
        <div class="header-fields">
            <h1 class="charname">{{localize skill.name}}</h1>
        </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
        <a class="item" data-tab="description">{{localize "WOD5E.Description"}}</a>
        <a class="item" data-tab="bonuses">{{localize "WOD5E.Bonuses"}}</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        <div class="tab description" data-group="primary" data-tab="description">
            <textarea id="description">{{skill.description}}</textarea>
        </div>

        {{!-- Bonuses Tab --}}
        <div class="tab bonuses" data-group="primary" data-tab="bonuses">
            <div class="bonuses-list">
                {{#each skill.bonuses as |bonus key|}}
                    <div class="bonus">
                    <h3>{{bonus.source}}</h3>
                    <input type="number" value="{{bonus.value}}"/>
                    <input type="text" value="{{splitArray bonus.paths}}"/>
                    </div>
                {{/each}}
            </div>
            <div class="flexrow">
                <input id="addBonusName" type="text" value=""/>
                <label id="addBonusButton">Add Bonus</label>
            </div>
        </div>
    </section>
</form>